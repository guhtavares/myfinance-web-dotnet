@using PlanoContaModel = myfinance_web_dotnet.Domain.PlanoConta

@{
    ViewData["Title"] = "Plano de Contas";
}

<h1>Plano de Contas</h1>
<br/>

<a type="button" class="btn btn-primary" asp-area="" asp-controller="PlanoConta" asp-action="Cadastro">Criar item de Plano de Conta</a>

<br/><br/>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<PlanoConta>)ViewBag.Lista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>

                <td>
                    <form action="@Url.Action("Excluir", "PlanoConta")" method="post" onsubmit="return confirm('Tem certeza que deseja excluir?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<script>
    function Editar(id){
        window.location.href = "../PlanoConta/Cadastro/" + id;
    }
</script>