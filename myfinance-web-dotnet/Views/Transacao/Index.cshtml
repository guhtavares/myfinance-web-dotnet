@using myfinance_web_dotnet.Domain
@{
    ViewData["Title"] = "Transações Financeiras";
}

<h2>Transacao</h2>
<br/>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Transacao" asp-action="Cadastro">Registrar Transação</a>
<br/><br/>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Data</th>
        <th>valor</th>
        <th>Histórico</th>
        <th>Tipo</th>
        <th>PlanoConta</th>
        <th>#</th>
        <th>#</th>
    </tr>
    @{
        @foreach (var item in (List<TransacaoModel>)ViewBag.ListaTransacao ?? new List<TransacaoModel>())
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Data.ToShortDateString()</td>
                <td>@item.Valor</td>
                <td>@item.Historico</td>
                <td>@item.Tipo</td>
                <td>@item.PlanoContaId</td>
                <td><button type="button" class="btn btn-warning">Editar</button></td>
                
                
                <td>
                    <form action="@Url.Action("Excluir", "Transacao")" method="post" onsubmit="return confirm('Tem certeza que deseja excluir?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>