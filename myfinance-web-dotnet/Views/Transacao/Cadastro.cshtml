@model Transacao

@{
    ViewData["Title"] = "Cadastro de Transações";
}

<h1>@ViewData["Title"]</h1>
<br/>

<form asp-controller="Transacao" asp-action="Cadastro" method="post">
    <div class="container">
        <div class="mb-3">
            <label class="form-label" for="txtData">Data</label>
            <input type="date" id="txtData" class="form-control" asp-for="Data" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtValor">Valor</label>
            <input type="number" id="txtValor" class="form-control" asp-for="Valor" step="0.01" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtHistorico">Descrição</label>
            <input type="text" id="txtHistorico" class="form-control" asp-for="Historico" />
            <span asp-validation-for="Historico" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtTipo">Tipo</label>
            <input type="text" id="txtTipo" class="form-control" asp-for="Tipo" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="txtPlanoConta">Plano Conta</label>
            <input type="text" id="txtPlanoConta" class="form-control" asp-for="Tipo" />
            <span asp-validation-for="PlanoContaId" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">Cancelar</button>
        </div>

    </div>
</form>

<script>
    function Voltar(){
        window.location.href = "../Index";
    }
</script>